
@{
    ViewBag.Title = "Add Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/addlocations")
<div id="page-title">
    <h2>Location Management</h2>
    <p>Add Physical Location</p>
</div>
<div class="panel">
    <div class="panel-body">
        <h3 class="title-hero">
            <i class="glyph-icon icon-plus-square"></i> Add Physical Location
        </h3>
        <div class="example-box-wrapper">
            <form class="form-horizontal bordered-row" id="demo-form" data-parsley-validate="">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" placeholder="Enter Location Name" required class="form-control" id="locationName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Location</label>
                            <div class="col-sm-10">
                                <input type="text" placeholder="Enter Physical Location" required class="form-control" id="location">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Decription</label>
                            <div class="col-sm-10">
                                <input type="text" placeholder="Enter Location Decription" class="form-control" id="locationDecription">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="addBtn" class="btn btn-lg btn-info" style="float:right;" onclick="addLocation()">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


