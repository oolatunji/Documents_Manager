
@{
    ViewBag.Title = "Update Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/updateroles")
<div id="page-title">
    <h2>ROLE MANAGEMENT</h2>
    <p>Update Role</p>
</div>
<div class="panel">
    <div class="panel-body">
        <h3 class="title-hero">
            <i class="glyph-icon icon-edit"></i> Update Role
        </h3>
        <div class="example-box-wrapper">
            <form class="form-horizontal bordered-row" id="demo-form" data-parsley-validate="">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="Enter Role Name" name="roleName" id="roleName" autofocus="" required="" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-sm-offset-2 panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title" style="font-family:Arial;color:black;font-size:13px;">Functions</h3>
                                </div>
                                <div class="panel-body" id="dynamicfunctions">

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="updateBtn" class="btn btn-lg btn-info" style="float:right;" onclick="updateRole()">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="panel-footer" style="text-align:right">
        <a href="../Role/ViewRole" title="View Roles" style="color:blue;font-weight:bold;"><i class="glyph-icon icon-mail-reply-all"></i> View Roles</a>
    </div>
</div>






