@{
    ViewBag.Title = "Update Criteria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/updatecriterias")
<div id="page-title">
    <h2>CATALOGUE CRITERIA</h2>
    <p>Update Criteria</p>
</div>
<div class="panel">
    <div class="panel-body">
        <h3 class="title-hero">
            <i class="glyph-icon icon-edit"></i> Update Criteria
        </h3>
        <div class="example-box-wrapper">
            <form class="form-horizontal bordered-row" id="demo-form" data-parsley-validate="">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" placeholder="Enter Criteria Name" required class="form-control" id="criteriaName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Decription</label>
                            <div class="col-sm-10">
                                <input type="text" placeholder="Enter Criteria Decription" class="form-control" id="criteriaDecription">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="updateBtn" class="btn btn-lg btn-info" style="float:right;" onclick="updateCriteria()">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="panel-footer" style="text-align:right">
        <a href="../CatalogueCriteria/ViewCriteria" title="View Criteria" style="color:blue;font-weight:bold;"><i class="glyph-icon icon-mail-reply-all"></i> View Criteria</a>
    </div>
</div>





