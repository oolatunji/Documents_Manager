
@{
    ViewBag.Title = "Upload Document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/uploaddocument")
<div id="page-title">
    <h2>DOCUMENT MANAGEMENT</h2>
    <p>Upload Document</p>
</div>
<div class="panel">
    <div class="panel-body">
        <h3 class="title-hero">
            <i class="glyph-icon icon-upload"></i> Upload Document
        </h3>
        <div class="example-box-wrapper">
            <form class="form-horizontal bordered-row" id="demo-form" data-parsley-validate="">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Select File</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control" id="docs">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Catalogue</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="catalogue" required="" data-parsley-required-message="Please select catalogue"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Physical Location</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="physicalLocation" required="" data-parsley-required-message="Please select physical location"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="addBtn" class="btn btn-lg btn-info" style="float:right;" onclick="uploadDocument()">Upload</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



