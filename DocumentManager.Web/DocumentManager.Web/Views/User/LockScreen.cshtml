@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
        #loading .svg-icon-loader {
            position: absolute;
            top: 50%;
            left: 50%;
            margin: -50px 0 0 -50px;
        }
    </style>

    <meta charset="UTF-8">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <title> Lock Screen </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <!-- Favicons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/images/icons/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/images/icons/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/images/icons/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/images/icons/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="../assets/images/icons/favicon.png">
    @Styles.Render("~/common/css")
    @Scripts.Render("~/common/libraries")
    @Scripts.Render("~/unlockscreen")
    <script type="text/javascript">
        $(window).load(function () {
            setTimeout(function () {
                $('#loading').fadeOut(400, "linear");
            }, 300);
        });
    </script>
</head>
<body>
    <div id="loading">
        <div class="svg-icon-loader">
            <img src="~/assets/images/svg-loaders/bars.svg" width="40" />
        </div>
    </div>
    <style type="text/css">
        html, body {
            height: 100%;
        }

        body {
            background: #fff;
            overflow: hidden;
        }
    </style>

    <img src="~/assets/image-resources/blurred-bg/blurred-bg-9.jpg" class="login-img wow fadeIn" alt="" />
    <div class="center-vertical">
        <div class="center-content">
            <div class="col-md-4 col-sm-5 col-xs-11 col-lg-3 center-margin">
                <div class="content-box wow bounceInDown modal-content pad20A clearfix">
                    <div class="col-md-12">
                        <div class="meta-box text-left">
                            <h3 class="meta-heading font-size-16" id="user"></h3>
                            <h4 class="meta-subheading font-size-13 font-gray" id="userrole"></h4>
                            <div class="divider"></div>
                            <form id="demo-form" data-parsley-validate="" class="form-inline pad10T">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="password" id="password" placeholder="Password" class="form-control" required="" data-parsley-required-message="Please enter your password">
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary" id="addBtn" type="button" onclick="unlockscreen()"><i class="glyph-icon icon-unlock-alt"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

